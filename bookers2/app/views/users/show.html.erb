
    <p>
    <% if flash[:notice] %>
     <%= flash[:notice] %>
    <% end %>
   </p>

  <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <!--部分テンプレート-->
    <%= render "books/book", user: @user, book: @book %>
   </div>

   <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
    <table class="table table-hover table-inverse">
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
     </thead>

     <tbody>
     <% @books.each do |book| %>
      <tr>
        <td>
          <%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
        </td>
        <td>
         <%= link_to book_path(book.id) do %>
         <span><%= book.title %></span>
         <% end %>
        </td>
        
        <td><span><%= book.body %></span></td>
      </tr>
     <% end %>
     </tbody>
    
    </table>
   </div>


