     <h2 class="mt-3">New book</h2>
     <!--%= render 'books/book', book: @book %>-->
     <%= form_with model: @book, local: true do |f| %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "col-xs-12" %>
      </div>

      <div class="form-group">
  	    <%= f.label :opinion %>
       <%= f.text_area :body, class: "col-xs-12" %>
      </div>

      <div class="actions row">
