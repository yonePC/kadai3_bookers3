

<div class="container px-5 px-sm-0">
 <div class="row">
   <div class="col-md-3">
    <!--部分テンプレート-->
    <%= render "users/userinfo", user: current_user %>



    <!--  右側  -->

    <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
       <table class="table table-hover table-inverse">
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
     </thead>

     <tbody>
       <% @books.each do |book| %>
      <tr>
       <td>写真</td>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>
      </tr>
      <% end %>
     </tbody>